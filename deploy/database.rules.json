{
  "rules": {
    "$user": {
      ".read": "$user == auth.uid",
      ".write": "$user == auth.uid"
    },
    "insumos": {
      ".read": "auth != null",
      ".write": false
    },
    "tokens": {
      ".indexOn": [
        "uid",
        "token"
      ],
      ".read": "auth != null",
      ".write": "auth != null",
      "$tokens": {
        ".validate": "newData.hasChildren(['uid', 'token']) && newData.child('uid').val() == auth.uid"
      }
    },
    "notifications": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$notification": {
        ".validate": "newData.hasChildren(['title', 'body', 'icon', 'click_action'])"
      }
    }
  }
}
